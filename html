  <p>Final price including VAT: <span id="final-price"></span></p>
  <script>
    function calculateVAT() {
      var price = document.getElementById("price").value;
      var vatRate = document.getElementById("vat-rate").value;
      var finalPrice = parseFloat(price) + parseFloat(price * vatRate);
      document.getElementById("final-price").innerHTML = finalPrice.toFixed(2);
    }
  </script>
